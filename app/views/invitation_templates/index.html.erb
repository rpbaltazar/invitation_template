<p id="notice"><%= notice %></p>

<h1>Listing Invitation Templates</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitation_templates.each do |invitation_template| %>
      <tr>
        <td><%= invitation_template.subject %></td>
        <td><%= invitation_template.body %></td>
        <td><%= link_to 'Show', invitation_template %></td>
        <td><%= link_to 'Edit', edit_invitation_template_path(invitation_template) %></td>
        <td><%= link_to 'Destroy', invitation_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

